{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": false,
    "strictNullChecks": true 
  },
  "files": [
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/jasmine/index.d.ts"
  ],
  "include": [
    "protocol/**/*",
    "bin/*",
    "src/**/*",
    "src/**/*.json",
    "test/**/*",
    "test/**/*.pem",
    "test/**/*.json",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
